    <property name="url" value="jdbc:hsqldb:hsql://localhost/benchmarkDataBase;file:benchmark.db;sql.enforce_size=false;shutdown=false;"/>
    <property name="username" value="sa"/>
    <property name="password" value=""/>
    </bean>
